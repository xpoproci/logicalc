@if (visible)
{
    <div id="@Id" class="modal">
        <div class="modal-content">
            <div class="flex w-full justify-between dark:text-slate-400 text-black">
                <h3 class="text-md">@Title</h3>
                <button @onclick="Close">
                    <svg fill="currentColor" height="24" width="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path clip-rule="evenodd" fill-rule="evenodd" d="M5.47 5.47a.75.75 0 011.06 0L12 10.94l5.47-5.47a.75.75 0 111.06 1.06L13.06 12l5.47 5.47a.75.75 0 11-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 01-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 010-1.06z"></path>
                    </svg>
                </button>
            </div>
            @ChildContent
        </div>
    </div>
}

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Id { get; set; } = "default";

    [Parameter]
    public string Title { get; set; } = string.Empty;

    private bool visible = false;

    private void Close()
    {
        visible = false;
        StateHasChanged();
    }

    public void Open()
    {
        visible = true;
        StateHasChanged();
    }

    public bool IsVisible()
    {
        return visible;
    }
}